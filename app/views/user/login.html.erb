<div class='login login1'>
<%=form_tag user1_path ,method:'post' do%>
<div class='form-group'>
<h1 style="color:#bbc4c5; text-align:center">Login</h1>
<%=text_field_tag :username ,"", class:'form-control',placeholder: 'Username'%><br>
<%if session[:incorrect_username]%>
<p class="red"> *Incorect Username</p>
<%end%>
</div>
<div class='form-group'>

<%=password_field_tag :password ,"",class:'form-control',placeholder: 'Password'%> <br>
<%if session[:incorrect_password]%>
<p class='red'>*Incorrect password</p>
<%end%>
</div>
<%=submit_tag "LOGIN", class:'btn btn-info'%>
<%end%>

</div>
